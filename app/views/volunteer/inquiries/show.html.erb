<h1>
  活動：  <br>
  會議： <%= @inquiry.interpellation.name %>
</h1>

<div class="video-wrapper">
  <div class="page-header">
    <h3>質詢影片</h3>
  </div>
  <video controls src="<%= @inquiry.video %>">
    Your browser does not support the video tag.
  </video>
  <br>
  <span id="video-finish-button" class="btn btn-default">我已經看完影片，開始評鑑</span>
</div>

<%= render "common/surveys/hidden_form", resource: [:volunteer, @inquiry, @survey], questions: @questions %>

<%# content_for would be affected by turbolink %>
<script>
  $("#video-finish-button").click(function(e) {
    $("#survey-wrapper").removeClass("hidden");
  })
</script>
