<%= simple_form_for([:admin, @event]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: "活動名稱" %>
    <%= f.association :interpellation, label: "指定會議" %>
    <%= f.input :active, as: :radio_buttons, collection: [["開放", true], ["未開放", false]], label: "狀態"  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "送出" %>
  </div>
<% end %>
