<%= render "admin/evaluation_dropdown" %>
<h1>公民評委活動列表</h1>

<table class="table">
  <thead>
    <tr>
      <th>活動名稱</th>
      <th>會議名稱</th>
      <th>狀態</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.name, admin_event_path(event) %> (<%= event.token %>)</td>
        <td><%= event.interpellation.name rescue nil %></td>
        <td><%= event_status(event.active) %></td>
        <td><%= link_to '編輯', edit_admin_event_path(event) %></td>
        <td><%= link_to '刪除', admin_event_path(event), method: :delete, data: { confirm: '確認刪除?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新增活動', new_admin_event_path, class: "btn btn-success" %>
