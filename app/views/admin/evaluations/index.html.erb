<h1>各會期資料</h1>
<table class="table">
  <thead>
    <tr>
      <th>屆數</th>
      <th>期次</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @evaluations.each do |evaluation| %>
    <tr>
      <td><%= evaluation.term_number rescue nil %></td>
      <td><%= link_to(evaluation.session_number, admin_evaluation_path(evaluation)) %></td>
      <td><%= link_to("瀏覽本會期所有評鑑題目", admin_evaluation_questions_path(evaluation)) %></td>
    </tr>
    <% end %>
  </tbody>  
</table>
<%= link_to("開始新會期", new_admin_evaluation_path, class: "btn btn-primary") %>
