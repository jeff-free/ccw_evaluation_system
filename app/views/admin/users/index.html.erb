<div class="page-header">
  <h1>
    使用者列表 
    <%= link_to("新增 User", new_admin_user_path, class: "btn btn-default") %>
  </h1>
</div>

<table class="table">
  <thead>
    <th>ID</th>
    <th>Name</th>
    <th>Email</th>
    <th>Role</th>
    <th></th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= link_to(user.name, admin_user_path(user)) %></td>
      <td><%= user.email %></td>
      <td><%= user.role %></td>
      <td><%= link_to("編輯", edit_admin_user_path(user), class: "btn btn-default btn-xs") %></td>
    </tr>
    <% end %>
  </tbody>
</table>
