<div class="form-inputs">
  <%= f.association :committee, label: "委員會" if @interpellation.persisted? %>
  <%= f.input :name, label: "會議名稱" %>
  <%= f.input :interpellation_date, as: :date_picker, label: "會議日期" %>
  <%= f.input :content, label: "會議內容" %>
  <%= f.association :evaluation, collection: Evaluation.all.map{|e| [e.full_name, e.id]}, label: "會期", include_blank: false %>
</div>

<div class="form-actions">
  <%= f.button :submit, "送出" %>
</div>

<%= content_for "javascripts" do %>
  <%= render "initializers/date_picker_initializer" %>
<% end %>