
<div class="page-header">
  <h1>使用者回報的質詢影片</h1>
</div>

<table class="table">
    <thead>
      <th>Name</th>
      <th>網址</th>
      <th>回報次數</th>
      <th></th>
    </thead>

    <tbody>
    <% @inquiries.each do |inquiry| %>
      <tr>
        <td><%= inquiry.name %></td>
        <td><%= inquiry.video %></td>
        <td><%= inquiry.no_value_count %></td>
        <td>
          <%= link_to("設為不顯示", deactivate_admin_reported_inquiry_path(inquiry), data: { confirm: '此動作無法還原，確定設定為不顯示？' }, class: "btn btn-xs btn-danger", method: :post) %>
        </td>
      </tr>
    <% end %>

    </tbody>
</table>



