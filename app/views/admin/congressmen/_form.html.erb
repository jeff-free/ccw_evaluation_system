<%= simple_form_for([:admin, @congressman]) do |f| %>
  <%= f.input :name, label: "姓名" %>
  <%= f.input :en_name, label: "英文名" %>
  <%= f.input :sex, collection: [["男", "male"], ["女", "female"], ["第三性", "third_sex"]], as: :radio_buttons %>
  <%= f.input :tel %>
  <%= f.input :fax %>
  <%= f.input :degree %>
  <%= f.input :avatar_url %>
  <%= f.input :experience %>
  <%= f.button :submit, "送出" %>
<% end %>
