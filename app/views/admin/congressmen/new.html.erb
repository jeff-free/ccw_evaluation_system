<%= simple_form_for(@congressman, url: admin_party_congressmen_path(@party), method: :post) do |f| %>
  <%= f.simple_fields_for :congressmen_evaluations, @congressmen_evaluation do |c| %>
    <%= c.select :evaluation_id, Evaluation.all.map{|evaluation| [evaluation.full_name, evaluation.id]} %>
    <%= c.hidden_field :party_id, value: @party.id %>
    <%= c.input :election_type, as: :radio_buttons, collection: [["區域", "regional"], ["不分區", "at_large"]], label: "當選方式", include_blank: false %>
  <% end %>
  <%= render 'form', f: f %>
<% end %>
  