<div class="page-header">
  <h1><%= @congressman.name %></h1>
</div>
<div class="col-sm-6">
  <%= image_tag @congressman.avatar_url, class: "img-responsive" %>
  <%= simple_form_for([:admin, @congressman]) do |f| %>
    <%= render "form", f: f %>
  <% end %>

</div>
<div class="col-sm-6">
  <%= link_to("新增會期", new_admin_congressman_congressmen_evaluation_path(@congressman), class: "btn btn-default") %>
  <table class="table">
    <thead>
      <th>會期</th>
      <th>政黨</th>
      <th>類型</th>
      <th>分數</th>
    </thead>
    <tbody>
      <% @congressman.congressmen_evaluations.each do |congressmen_evaluation| %>
        <tr>
          <td><%= link_to congressmen_evaluation.full_name, admin_congressmen_evaluation_path(congressmen_evaluation) %></td>
          <td><%= congressmen_evaluation.party.name %></td>
          <td><%= congressmen_evaluation.election_type %></td>
          <td><%= congressmen_evaluation.id %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
