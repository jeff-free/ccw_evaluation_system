<div class="page-header">
  <h1>請選擇要評鑑的會議</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>質詢</th>
      <th>立委</th>
      <th>會議</th>
    </tr>
  </thead>
  <tbody>
    <% @inquiries.each do |inquiry| %>
